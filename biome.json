{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "includes": ["./src/**/*.ts"]
  },
  "formatter": {
    "enabled": true
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "indentStyle": "space",
      "lineWidth": 150
    },
    "linter": {
      "enabled": true
    },
    "assist": {
      "enabled": true
    }
  }
}