{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsbuildinfo.json",
    "target": "ES2020",
    "lib": ["ESNext"],
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
